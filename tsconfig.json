{
  "compilerOptions": {
    "outDir": "./dist/lib",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings",
    ],
    "sourceMap": true,
    //"noImplicitAny": false,
    //"strict": false,
    "module": "none",
    "target": "es2016",
    "lib": [
      "es2020",
      "DOM"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}